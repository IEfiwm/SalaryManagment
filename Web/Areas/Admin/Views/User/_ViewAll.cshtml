@using Web.Areas.Admin.Models
@model IEnumerable<UserViewModel>
@inject IHtmlLocalizer<SharedResource> localizer
<table class="table table-striped" id="userTable">
    <thead>
        <tr>
            <th>
                کد پ
            </th>
            <th>
                نام و نام خانوادگی
            </th>
            <th>
                نام پدر
            </th>
            <th>
                کد ملی
            </th>
            <th>
                شماره بیمه
            </th>
            <th>
                شماره تماس
            </th>
            <th>
                شغل
            </th>
            <th>
                شماره حساب
            </th>
            <th>
                شروع کار
            </th>
            <th>
                ترک کار
            </th>
            <th>
                وضعیت
            </th>
            @*            <th>
                @localizer["User"]
                </th>
                <th>
                @localizer["PhoneNumber"]
                </th>
                <th>
                @localizer["PersonnelCode"]
                </th>
                <th>
                @localizer["NationalCode"]
                </th>
                <th>
                @localizer["Status"]
                </th>*@
            <th style="width:10%">
                #
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    <div class="row">
                        <div class="col-sm">
                            <a>
                                @user.PersonnelCode
                            </a>
                        </div>
                    </div>
                </td>
                <td>
                    <div class="row">
                        <div class="col-sm">
                            <a>
                                @user.FirstName @user.LastName
                            </a>
                            <br>
                            <small>
                                @user.ProjectName
                            </small>
                        </div>
                    </div>
                </td>
                <td>
                    <div class="row">
                        <div class="col-sm">
                            <a>
                                @user.FatherName
                            </a>
                        </div>
                    </div>
                </td>
                <td>
                    <div class="row">
                        <div class="col-sm">
                            <a>
                                @user.NationalCode
                            </a>
                        </div>
                    </div>
                </td>
                <td>
                    <div class="row">
                        <div class="col-sm">
                            @user.InsuranceCode
                        </div>
                    </div>
                </td>
                <td>
                    <div class="row">
                        <div class="col-sm">
                            @user.PhoneNumber
                        </div>
                    </div>
                </td>
                <td>
                    <div class="row">
                        <div class="col-sm">
                            @user.JobTitle
                        </div>
                    </div>
                </td>
                <td>
                    <div class="row">
                        <div class="col-sm">
                            @user.BankAccNumber
                        </div>
                    </div>
                </td>
                <td>
                    <div class="row">
                        <div class="col-sm">
                            @(user.StartWorkingDate != null ? user.StartWorkingDate.Value.ToString("yyyy/mm/dd")  : "")
                        </div>
                    </div>
                </td>
                <td>
                    <div class="row">
                        <div class="col-sm">
                            @(user.EndWorkingDate != null ? user.EndWorkingDate.Value.ToString("yyyy/mm/dd")  : "")
                        </div>
                    </div>
                </td>
                <td>
                    @if (user.IsActive)
                    {
                        <span class="badge badge-success">@localizer["Active"]</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">@localizer["Deactivated"]</span>
                    }
                </td>
                <td>
                    <div class="btn-group">
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            @localizer["Actions"]
                        </button>
                        <div class="dropdown-menu shadow animated--grow-in">
                            <a asp-area="Admin" asp-controller="User" asp-action="Edit" asp-route-userId="@user.Id" class="dropdown-item">
                                <i class="fa fa-pencil"></i> @localizer["Edit"]
                            </a>
                            <a asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-userId="@user.Id" class="dropdown-item">
                                <i class="fa fa-pencil"></i> @localizer["Delete"]
                            </a>
                            @*                            <a style='margin-right:16px' asp-controller="UserRole" asp-action="Index" asp-route-userId="@user.Id" class="dropdown-item">
                                <i class="fas fa-wrench"></i> @localizer["Manage Roles"]
                                </a>*@
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    var test;
    $(document).ready(function () {
        $("#userTable").DataTable({
                searching: true,
                ordering:  true,
                processing: true,
                select: true,
                responsive: true,
                oLanguage : {
                    sSearch: "جستجو: ",
                    sInfo: "نمایش _START_ تا _END_ از _TOTAL_ رکورد",
                    sLengthMenu: "نمایش _MENU_ رکورد",
                    sInfoFiltered: "فیلتر شده از _MAX_ رکورد",
                    sInfoEmpty  : "هیچ داده ای یافت نشد",
                    sZeroRecords: "رکوردی یافت نشد",
                    oPaginate:{
                        sPrevious: "قبلی",
                        sNext: "بعدی",
                    }
                },
                initComplete: function(settings, json) {
                  SetLoading(false,"#myT");
                }
        });
    });
</script>